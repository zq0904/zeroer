{
  "version": "independent",
  "npmClient": "npm",
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "**/node_modules/**",
    "**/dist-*/**",
    "**/esm/**",
    "**/umd/**",
    "**/*.log*",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "message": "chore(release): publish %v"
    },
    "bootstrap": {
      "hoist": false
    }
  }
}
